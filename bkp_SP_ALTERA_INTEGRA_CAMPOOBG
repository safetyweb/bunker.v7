CREATE DEFINER=`adminterno`@`%` PROCEDURE `SP_ALTERA_INTEGRA_CAMPOOBG`(
	IN `p_COD_CAMPOOBG` INT,
	IN `p_TIP_BLOCOOBG` CHAR(3),
	IN `p_NOM_CAMPOOBG` VARCHAR(20),
	IN `p_KEY_CAMPOOBG` VARCHAR(20),
	IN `p_DES_CAMPOOBG` VARCHAR(50),
	IN `p_TIP_CAMPOOBG` VARCHAR(50),
	IN `p_COL_MD` INT,
	IN `p_COL_XS` INT,
	IN `p_CLASSE_INPUT` VARCHAR(100),
	IN `p_CLASSE_DIV` VARCHAR(100),
	IN `p_OPCAO` varchar(18)
)
LANGUAGE SQL
NOT DETERMINISTIC
CONTAINS SQL
SQL SECURITY DEFINER
COMMENT ''
BEGIN
IF p_OPCAO ='CAD'
THEN

	 INSERT INTO INTEGRA_CAMPOOBG(
		
			TIP_BLOCOOBG,
			NOM_CAMPOOBG,
			KEY_CAMPOOBG,
			DES_CAMPOOBG,
			COL_MD,
			COL_XS,
			CLASSE_INPUT,
			CLASSE_DIV,
			TIP_CAMPOOBG

			    
		  )
	 VALUES (
	 
	      p_TIP_BLOCOOBG,
			p_NOM_CAMPOOBG,
			p_KEY_CAMPOOBG,
			p_DES_CAMPOOBG,
			p_COL_MD,
			p_COL_XS,
			p_CLASSE_INPUT,
			p_CLASSE_DIV,
			p_TIP_CAMPOOBG
			
			
			);
			
			
END IF;

IF p_OPCAO ='ALT'
THEN

 UPDATE INTEGRA_CAMPOOBG SET
	
      	TIP_BLOCOOBG=p_TIP_BLOCOOBG,
			NOM_CAMPOOBG=p_NOM_CAMPOOBG,
			KEY_CAMPOOBG=p_KEY_CAMPOOBG,
			DES_CAMPOOBG=p_DES_CAMPOOBG,
			COL_MD=p_COL_MD,
			COL_XS=p_COL_XS,
			CLASSE_INPUT=p_CLASSE_INPUT,
			CLASSE_DIV=p_CLASSE_DIV,
			TIP_CAMPOOBG=p_TIP_CAMPOOBG
        
WHERE  	COD_CAMPOOBG=p_COD_CAMPOOBG;

END IF;


END